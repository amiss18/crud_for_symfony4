{# app/Resources/views/base.html.twig #}



{%  set thisPage= page %}
<ul class="pagination justify-content-center">
    {#    #}
    {% set firstPage = (thisPage == 1 ) ? 'disabled':'previous'   %}

    <li   class="page-item {{ firstPage }}">
        <a class="page-link" href="{{ path('home', app.request.query.all|merge({page: thisPage-1 < 1 ? 1 : thisPage-1})) }}">
            <span aria-hidden="true"> &larr;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    {% for i in 1..pages %}
        <li class="page-item hidden-xs {{ (i == page) ? 'active':''}} {{ loop.first ? 'first':'' }} {{ loop.last ? 'last':'' }}">
            {% if i == page %}
                <a class="page-link" href="#">  {{ page }} </a>
            {% else %}
                <a class="page-link" href="{{ path('home', app.request.query.all|merge({'page': i}) ) }}">{{ i }}</a>
            {% endif %}
        </li>

    {% endfor %}


    {#    #}
    {% set lastPage = (thisPage == pages ) ? 'disabled':'next'   %}

    <li  class="page-item {{ lastPage }}">
        <a class="page-link" href="{{ path('home', app.request.query.all|merge({page: thisPage+1 <= pages ? thisPage+1 : thisPage}) ) }}">
            <span aria-hidden="true">&rarr;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>

</ul>
